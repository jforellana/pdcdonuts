
@{
    ViewData["Title"] = "View";
}

<div class="container" style="overflow-y: auto; display: inline-block; height: 25rem">
    <div><img src="@Model.ImgLink" width="100%" style="padding: 1%; margin-top: 5%; max-height: 15rem;border-radius: 10px;" alt="@Model.Name" /></div>
    @{
        var truncatedText = Model.Name;
        if (truncatedText.Length > 20)
        {
            truncatedText = truncatedText.Substring(0, 20) + "....";
        }
        <h5 class="text-white">@truncatedText</h5>
    }
    <h5 class="text-white">$@Model.Price</h5>
   @* <a class="btn zesty-button" asp-controller="Home" asp-action="ProductDetails" asp-route-id="@Model.ProductId"
      asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">Product Details</a> *@

    <br />
</div>

